{
  "name": "governance-ui",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "rm -rf .parcel-cache dist out node_modules yarn.lock",
    "prepare": "husky install",
    "dev": "DEFAULT_NETWORK=kusama parcel serve ./src/index.html",
    "build": "parcel build ./src/index.html --detailed-report --log-level verbose --public-url ${PUBLIC_URL:-/} && cp assets/robots.txt dist/ && mkdir -p dist/data && cp -R assets/data/* dist/data/",
    "fix:format": "prettier -w ./src",
    "fix:lint": "eslint ./src --fix",
    "fix:all": "yarn fix:format && yarn fix:lint",
    "check:format": "prettier -c ./src",
    "check:lint": "eslint ./src",
    "check:tsc": "tsc --noEmit",
    "check:all": "yarn check:tsc && yarn check:format && yarn check:lint",
    "test:unit": "jest --detectOpenHandles"
  },
  "source": "src/index.tsx",
  "app": "dist/index.html",
  "targets": {
    "app": {}
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "@parcel/service-worker": "2.8.3",
    "@polkadot-onboard/core": "0.0.9",
    "@polkadot-onboard/injected-wallets": "0.0.9",
    "@polkadot-onboard/react": "0.0.9",
    "@polkadot/api": "10.4.1",
    "@polkadot/react-identicon": "3.2.1",
    "@polkadot/util": "12.0.1",
    "@react-spring/web": "9.7.2",
    "@use-gesture/react": "10.2.26",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-remark": "2.1.0"
  },
  "devDependencies": {
    "@parcel/compressor-brotli": "2.8.3",
    "@parcel/compressor-gzip": "2.8.3",
    "@parcel/packager-raw-url": "2.8.3",
    "@parcel/transformer-svg-react": "2.8.3",
    "@parcel/transformer-webmanifest": "2.8.3",
    "@playwright/test": "1.32.3",
    "@tailwindcss/typography": "0.5.9",
    "@testing-library/react": "14.0.0",
    "@types/bn.js": "5.1.1",
    "@types/jest": "29.5.1",
    "@types/react": "18.0.38",
    "@types/react-dom": "18.0.11",
    "@types/serviceworker": "0.0.67",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.0",
    "buffer": "5.5.0",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fake-indexeddb": "4.0.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "parcel": "2.8.3",
    "parcel-resolver-fix-ts-esm-shit": "0.0.1",
    "postcss": "8.4.23",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "0.2.7",
    "process": "0.11.10",
    "tailwindcss": "3.3.1",
    "ts-jest": "29.1.0",
    "typescript": "5.0.4"
  },
  "alias": {
    "@polkadot/x-fetch": "./node_modules/@polkadot/x-fetch/browser.js",
    "@polkadot/x-ws": "./node_modules/@polkadot/x-ws/browser.js",
    "@polkadot/x-textencoder": "./node_modules/@polkadot/x-textencoder/browser.js",
    "@polkadot/x-textdecoder": "./node_modules/@polkadot/x-textdecoder/browser.js"
  },
  "packageManager": "yarn@1.22.19"
}
