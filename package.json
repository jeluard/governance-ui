{
  "name": "swipealot",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "rm -rf .parcel-cache dist node_modules yarn.lock",
    "prepare": "husky install",
    "dev": "DEFAULT_NETWORK=kusama parcel serve ./src/index.html",
    "build": "parcel build ./src/index.html --detailed-report --log-level verbose --public-url ${PUBLIC_URL} && cp assets/robots.txt dist/",
    "fix:format": "prettier -w ./src",
    "fix:lint": "eslint ./src --fix",
    "fix:all": "yarn fix:format && yarn fix:lint",
    "check:format": "prettier -c ./src",
    "check:lint": "eslint ./src",
    "check:tsc": "tsc --noEmit",
    "check:all": "yarn check:tsc && yarn check:format && yarn check:lint",
    "test:unit": "jest --detectOpenHandles",
    "test:e2e": "yarn playwright test",
    "zombienet:setup": "zombienet setup polkadot",
    "zombienet:native": "zombienet --provider native spawn ./test/e2e/zombienet/small-network.toml",
    "zombienet:podman": "zombienet --provider podman spawn ./test/e2e/zombienet/small-network.toml"
  },
  "source": "src/index.tsx",
  "app": "dist/index.html",
  "targets": {
    "app": {}
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "@parcel/service-worker": "2.8.3",
    "@polkadot-onboard/core": "0.0.6-beta",
    "@polkadot-onboard/injected-wallets": "0.0.6-beta",
    "@polkadot-onboard/react": "0.0.6-beta",
    "@polkadot/api": "9.13.6",
    "@polkadot/react-identicon": "2.11.1",
    "@react-spring/web": "9.6.1",
    "@use-gesture/react": "10.2.24",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-remark": "2.1.0"
  },
  "devDependencies": {
    "@parcel/compressor-brotli": "2.8.3",
    "@parcel/compressor-gzip": "2.8.3",
    "@parcel/packager-raw-url": "2.8.3",
    "@parcel/transformer-svg-react": "2.8.3",
    "@parcel/transformer-webmanifest": "2.8.3",
    "@playwright/test": "1.30.0",
    "@testing-library/react": "13.4.0",
    "@types/bn.js": "5.1.1",
    "@types/jest": "29.4.0",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@types/serviceworker": "0.0.62",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "@zombienet/cli": "1.3.33",
    "buffer": "5.5.0",
    "eslint": "8.33.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-react": "7.32.2",
    "fake-indexeddb": "4.0.1",
    "husky": "8.0.0",
    "jest": "29.4.2",
    "jest-environment-jsdom": "29.4.2",
    "parcel": "2.8.3",
    "postcss": "8.4.21",
    "prettier": "2.8.4",
    "prettier-plugin-tailwindcss": "0.2.2",
    "process": "0.11.10",
    "tailwindcss": "3.2.6",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  },
  "alias": {
    "@polkadot/x-fetch": "./node_modules/@polkadot/x-fetch/browser.js",
    "@polkadot/x-ws": "./node_modules/@polkadot/x-ws/browser.js",
    "@polkadot/x-textencoder": "./node_modules/@polkadot/x-textencoder/browser.js",
    "@polkadot/x-textdecoder": "./node_modules/@polkadot/x-textdecoder/browser.js"
  }
}
